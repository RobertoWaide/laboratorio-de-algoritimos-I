saldo = float(input("Quanto é o saldo atual? "))
code = 0

while code != 4:
    print("1 - Sacar")
    print("2 - Depositar")
    print("3 - Saldo")
    code = int(input("Selecionar: "))
    if code == 1:
        saque = float(input("Quanto você quer sacar? "))
        saldo = saldo - saque
    if code == 2:
        depos = float(input("Quanto você quer depositar? "))
        saldo = saldo = depos
    if code == 3:
        print(saldo)
